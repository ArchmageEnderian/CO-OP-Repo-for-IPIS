<Window x:Class="hotel.DelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hotel"
        mc:Ignorable="d"
        Title="DelWindow" Height="350" Width="300">
    <Grid Margin="0,0,0,59">
        <DataGrid x:Name="CustomerGrid" ItemsSource="{Binding}" AlternatingRowBackground="LightBlue" AlternationCount="2" />
        <TextBox MinWidth="150" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="InputTextBox" Margin="0,260,0,-30" Height="30" Width="292"/>
        <Button x:Name="NoButton" Margin="0,290,0,-60" Content="Удалить" Background="{x:Null}" Click="NoButton_Click" />
    </Grid>
</Window>
