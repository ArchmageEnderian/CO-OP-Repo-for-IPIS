<Window x:Class="hotel.DelWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:local="clr-namespace:hotel"
mc:Ignorable="d"
Title="DelWindow" MinHeight="500" Height="500" MaxHeight="500" Width="300">
    <Grid Margin="0,0,0,59">
        <DataGrid x:Name="CustomerGrid" ItemsSource="{Binding}" AlternatingRowBackground="LightBlue" AlternationCount="2" Height="390" VerticalAlignment="Top" />
        <TextBox VerticalAlignment="Center" x:Name="InputTextBox" Margin="0,390,0,-11" MinWidth="100" Height="31" HorizontalAlignment="Center" Width="292"/>
        <Button x:Name="NoButton" Margin="96,421,96,-59" Content="Удалить" Background="{x:Null}" HorizontalAlignment="Center" Width="100" MouseLeftButtonUp="NoButton_MouseLeftButtonUp"/>
    </Grid>
</Window>